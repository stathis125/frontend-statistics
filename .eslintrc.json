{
    "extends": "airbnb",
    "globals": {
        "window": true
    },
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "react/jsx-closing-bracket-location": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "comma-dangle": "off",
        "jsx-quotes": [
            "error",
            "prefer-single"
        ]
    }
}